{
  "parser"  : "babel-eslint",
  "extends" : [
    "standard"
  ],
  "plugins": [
    "html"
  ],
  "env"     : {
    "browser" : true,
    "jest": true,
    "jasmine": true
  },
  "rules": {
    "semi" : [2, "always"],
    "space-before-function-paren" : [2, "never"],
    "space-after-keywords" : [0, "never"]
  }
}
